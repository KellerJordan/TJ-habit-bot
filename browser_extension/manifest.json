/* File: manifest.json
 * -------------------
 * A manifest file (like this one) is used to
 * give Chrome information about your extension.
 *
 */


{
    "manifest_version": 2,
    "name": "monitor",
    "version": "0.1",
    "background": {
        "page": "src/background.html"
    },
    "permissions": [
        "tabs"
    ],
    "content_security_policy": "script-src 'self' https://www.gstatic.com https://*.firebaseio.com; object-src 'self';"
}
